FROM python:3.11-slim

WORKDIR /app

# Instalar Redis y dependencias
RUN apt-get update && apt-get install -y \
    redis-server curl gcc \
    && rm -rf /var/lib/apt/lists/*

# Copiar requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copiar código
COPY memory_mcp_server.py .

# Variables de entorno
ENV PYTHONUNBUFFERED=1
ENV ENVIRONMENT=railway
ENV REDIS_URL=redis://localhost:6379

# Puerto dinámico
EXPOSE $PORT

# Comando que inicia Redis + Memory server
CMD redis-server --daemonize yes --port 6379 && python memory_mcp_server.py