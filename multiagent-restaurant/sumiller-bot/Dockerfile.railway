FROM python:3.11-slim

WORKDIR /app

# Instalar dependencias del sistema
RUN apt-get update && apt-get install -y \
    gcc g++ curl \
    && rm -rf /var/lib/apt/lists/*

# Copiar y instalar dependencias Python
COPY multiagent-restaurant/sumiller-bot/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copiar código del sumiller (archivos que realmente existen)
COPY multiagent-restaurant/sumiller-bot/main.py .
COPY multiagent-restaurant/sumiller-bot/http_client.py .
COPY multiagent-restaurant/sumiller-bot/query_filter.py .
COPY multiagent-restaurant/sumiller-bot/config.py .

# Variables de entorno para Railway
ENV PYTHONUNBUFFERED=1
ENV ENVIRONMENT=railway
ENV HOST=0.0.0.0

# Puerto dinámico Railway (Railway proporciona automáticamente la variable PORT)
EXPOSE $PORT

# Comando de inicio
CMD python main.py