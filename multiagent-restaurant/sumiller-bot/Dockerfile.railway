FROM python:3.11-slim

WORKDIR /app

# Instalar dependencias del sistema
RUN apt-get update && apt-get install -y \
    gcc g++ curl \
    && rm -rf /var/lib/apt/lists/*

# Copiar y instalar dependencias Python
COPY sumiller-bot/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copiar código del sumiller
COPY sumiller-bot/main.py .
COPY sumiller-bot/sumiller_agent.py .
COPY sumiller-bot/circuit_breaker.py .

# Variables de entorno para Railway
ENV PYTHONUNBUFFERED=1
ENV ENVIRONMENT=railway
ENV HOST=0.0.0.0
ENV PORT=${PORT:-8000}

# Puerto dinámico Railway
EXPOSE $PORT

# Comando de inicio
CMD python main.py