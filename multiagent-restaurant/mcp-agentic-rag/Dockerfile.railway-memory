FROM python:3.11-slim

WORKDIR /app

# Instalar dependencias del sistema
RUN apt-get update && apt-get install -y \
    gcc g++ curl \
    && rm -rf /var/lib/apt/lists/*

# Copiar requirements mínimos para Memory Server
COPY multiagent-restaurant/mcp-agentic-rag/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copiar código del Memory MCP Server
COPY multiagent-restaurant/mcp-agentic-rag/memory_mcp_server.py .

# Variables de entorno para Railway
ENV PYTHONUNBUFFERED=1
ENV ENVIRONMENT=railway
ENV HOST=0.0.0.0
ENV PORT=${PORT:-8000}

# Puerto dinámico Railway
EXPOSE $PORT

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=20s --retries=3 \
    CMD curl -f http://localhost:$PORT/health || exit 1

# Comando de inicio
CMD python memory_mcp_server.py